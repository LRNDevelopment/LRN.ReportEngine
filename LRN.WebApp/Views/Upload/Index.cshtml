@model List<FileUpload>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    .filter-bar {
        background-color: #eaeaea;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .form-inline-group {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        align-items: flex-end;
    }

        .form-inline-group > div {
            flex: 1;
            min-width: 200px;
        }

    .upload-button-row {
        display: flex;
        justify-content: flex-end;
        margin-top: 10px;
    }

        .upload-button-row button {
            width: auto;
            padding: 8px 30px;
        }

    .table-container {
        background-color: #fff;
        border-radius: 8px;
        border: 1px solid #ddd;
        overflow-y: auto;
        max-height: 500px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .table thead th {
        position: sticky;
        top: 0;
        background-color: #343a40 !important;
        color: white !important;
        z-index: 2;
    }

    .pagination {
        justify-content: center;
    }

    .table-container th, .table-container td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: left;
    }   .excel-icon-link {
        text-decoration: none;
        margin-left: 10px;
    }

    .excel-icon-link i {
        font-size: 24px;
        color: green;
        transition: transform 0.2s;
    }

    .excel-icon-link i:hover {
        transform: scale(1.1);
    }
</style>

<div class="container">
    <div class="three">
        <h4>Upload Report</h4>
    </div>
    <div class="filter-bar" style="margin: 3px 5px;">
        @using (Html.BeginForm("UploadFile", "Upload", FormMethod.Post, new { enctype = "multipart/form-data", id = "uploadForm", onsubmit = "return validateForm();" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-inline-group">
           @*      <div style="display:none;">
                    @Html.DropDownList("lab", (List<SelectListItem>)ViewBag.Labs, "Select Lab", new { @class = "form-control", id = "lab", name = "lab" })
                    <div id="lab-error" class="text-danger"></div>
                </div> *@
                <div>
                    @Html.DropDownList("fileType", (List<SelectListItem>)ViewBag.FileTypes, "Select File Type", new { @class = "form-control", id = "fileType", name = "fileType" })
                    <div id="fileType-error" class="text-danger"></div>
                </div>
                <div>
                    <input type="file" id="file" name="file" class="form-control" />
                    <div id="file-error" class="text-danger"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <div class="alert alert-info">
                        <strong>Note:</strong> Please ensure that all relevant files have been imported before generating the report to prevent data mismatches.
                    </div>
                </div>
                 <div class="col-md-2">
                    <div class="upload-button-row" style="padding-top:10px;">
                        <a href="#" onclick="downloadTemplate()" title="Download Template">
                            <i class="fas fa-file-excel" style="font-size: 24px; color: green;"></i>&nbsp;&nbsp; Download Template
                        </a>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="upload-button-row">
                        <button type="submit" class="btn btn-primary">Upload</button>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="table-container">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>File Name</th>
                    @* <th>Lab</th> *@
                    <th>File Type</th>
                    <th>Uploaded On</th>
                    <th>Excel Row Count</th>
                    <th>Imported Row Count</th>
                    <th>Status</th>
                    <th>Logs</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderByDescending(c => c.ImportedOn))
                {
                    <tr>
                    <td>
                            <a href="@Url.Action("DownloadImportedFile", "Upload", new { 
                                fileId = item.ImportedFileId
                            })" title="Download File">
                                @item.ImportFileName
                            </a>
                    </td>
                        @* <td>Prism</td> *@
                        <td>@item.FileTypeName</td>
                        <td>@item.ImportedOn?.ToString("dd-MMM-yyyy hh:mm tt")</td>
                        <td>@item.ExcelRowCount</td>
                        <td>@item.ImportedRowCount</td>
                        <td> <span class="@item.FileStatusName.ToLower()">@item.FileStatusName</span></td>
                        <td>
                            <a href="@Url.Action("DownloadImportLogs", "Upload", new { fileId = item.ImportedFileId })" title="Download Logs">
                                <img src="~/image/log_download.png" height="25" width="25" />
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    @if (TempData["UploadSuccess"] != null)
    {
       <text>
           Swal.fire({
               icon: 'success',
               title: 'Upload Complete',
               text: 'File is uploaded and under In-Progress.',
               confirmButtonText: 'OK'
           });
       </text>
    }
      function downloadTemplate() {
        const fileType = document.getElementById("fileType").value;
        const errorEl = document.getElementById("fileType-error");

        if (!fileType) {
          if (errorEl) errorEl.innerText = "Please select a file type.";
          return;
        }
        if (errorEl) errorEl.innerText = "";

        // Use Url.Action so the path is correct in Production too
        const baseUrl = '@Url.Action("DownloadTemplate", "Upload")'; // e.g. /MyApp/Upload/DownloadTemplate
        const downloadUrl = baseUrl + '?fileType=' + encodeURIComponent(fileType);

        // More reliable than clicking a detached <a>
        window.location.href = downloadUrl;
      }

    function validateForm() {
        // const lab = document.getElementById("lab").value;
        const fileType = document.getElementById("fileType").value;
        const fileInput = document.getElementById("file");
        const file = fileInput.value;

        // document.getElementById("lab-error").innerText = "";
        document.getElementById("fileType-error").innerText = "";
        document.getElementById("file-error").innerText = "";

        let isValid = true;

        // if (!lab) {
        //     showError("lab", "Please select a lab");
        //     isValid = false;
        // }

        if (!fileType) {
            showError("fileType", "Please select a file type");
            isValid = false;
        }

        if (!file) {
            showError("file", "Please upload a file");
            isValid = false;
        } else {
            const allowedExtensions = /(\.xlsx|\.xls|\.csv)$/i;
            if (!allowedExtensions.exec(file)) {
                showError("file", "Invalid file type");
                isValid = false;
            }
        }

        return isValid;
    }

    function showError(inputId, message) {
        const errorDiv = document.getElementById(`${inputId}-error`);
        if (errorDiv) {
            errorDiv.innerText = message;
        }
    }
</script>
