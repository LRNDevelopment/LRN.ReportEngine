@model IEnumerable<LRN.ExcelToSqlETL.Core.DtoModels.ReportDownloadSts>

@{
    ViewBag.Title = "Report Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string rptMsg = ViewBag.ReportMessage;
}

<style>
    .filter-bar {
        background-color: #eaeaea;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .table-container {
        background-color: #fff;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .pagination {
        justify-content: center;
    }

    #loader {
        display: none;
        position: fixed;
        z-index: 9999;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        background: rgba(255, 255, 255, 0.7);
        align-items: center;
        justify-content: center;
    }

    .spinner {
        border: 8px solid #f3f3f3;
        border-top: 8px solid #3498db;
        border-radius: 50%;
        width: 60px;
        height: 60px;
        animation: spin 1s linear infinite;
    }

</style>

<div id="loader"><div class="spinner"></div></div>

<div class="container">
    <div class="three">
        <h4>Download Report</h4>
    </div>


    @using (Html.BeginForm("DownloadReport", "Upload", FormMethod.Post, new { id = "reportForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="filter-bar row align-items-end" style="margin: 2px 5px;">
            <div class="col-md-6">
                <label for="reportType" class="form-label">Select Report Type</label>
                @Html.DropDownList("reportType", new SelectList(ViewBag.ReportTypes as List<SelectListItem>, "Value", "Text"), "-- Select Report Type --", new { @class = "form-select", id = "reportType" })
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary w-100 mt-3" type="submit">Generate</button>
            </div>
        </div>
    }

    <div class="table-container">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Report Type</th>
                    <th>Generated On</th>
                    <th>Completed On</th>
                    <th>Status / Action</th>
                </tr>
            </thead>
            <tbody id="reportTableBody">
                @foreach (var item in Model.OrderByDescending(c => c.CreatedOn))
                {
                    <tr>
                        <td>@item.ReportName</td>
                        <td>
                            <span class="js-local-dt"
                                  data-utc="@(item.CreatedOn.ToUniversalTime().ToString("O"))"></span>
                        </td>
                        <td>
                            @if (item.ReportStatus == 2 || item.ReportStatus == 1)
                            {
                                <span class="js-local-dt"
                                      data-utc="@(item.CompletedOn.ToUniversalTime().ToString("O"))"></span>
                            }
                        </td>

                        <td class="text-center">
                            @if (item.ReportStatus == 3)
                            {
                                <span class="text-warning fw-bold">@item.FileStatus</span>
                            }
                            else if (item.ReportStatus == 4)
                            {
                                <span class="queued fw-bold">@item.FileStatus</span>
                            }
                            else if (item.ReportStatus == 2)
                            {
                                <span class="error fw-bold">Failed</span>
                                <a href="@Url.Action("DownloadReportLog", "Upload", new { fileId = item.ReportID })" title="Download Logs">
                                    <img src="~/image/log_download.png" height="25" width="25" />
                                </a>
                            }
                            else
                            {
                                using (Html.BeginForm("DownloadReportFile", "Upload", FormMethod.Post, new { @class = "d-inline" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("fileId", item.ReportID)

                                    <button class="btn  btn-success small-button" type="submit" style="width:110px;">
                                        Download
                                    </button>
                                }
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <div class="d-flex justify-content-end align-items-center">
                <ul class="pagination mb-0">
                    @if (ViewBag.TotalPages > 1)
                    {
                        int currentPage = ViewBag.CurrentPage;
                        int totalPages = ViewBag.TotalPages;
                        int jumpSize = 10;

                        // First page link
                        if (currentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("DownloadReport", new { page = 1 })">First</a>
                            </li>
                        }

                        // Previous page
                        if (currentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("DownloadReport", new { page = currentPage - 1 })">&laquo;</a>
                            </li>
                        }

                        // Show first few pages
                        for (int i = 1; i <= Math.Min(3, totalPages); i++)
                        {
                            if (i == currentPage)
                            {
                                <li class="page-item active"><span class="page-link">@i</span></li>
                            }
                            else
                            {
                                <li class="page-item"><a class="page-link" href="@Url.Action("DownloadReport", new { page = i })">@i</a></li>
                            }
                        }

                        // Ellipsis back jump
                        if (currentPage > 4)
                        {
                            int target = Math.Max(1, currentPage - jumpSize);
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("DownloadReport", new { page = target })">…</a>
                            </li>
                        }

                        // Current, Previous, Next group
                        for (int i = Math.Max(4, currentPage - 1); i <= Math.Min(totalPages - 3, currentPage + 1); i++)
                        {
                            if (i == currentPage)
                            {
                                <li class="page-item active"><span class="page-link">@i</span></li>
                            }
                            else
                            {
                                <li class="page-item"><a class="page-link" href="@Url.Action("DownloadReport", new { page = i })">@i</a></li>
                            }
                        }

                        // Ellipsis forward jump
                        if (currentPage < totalPages - 3)
                        {
                            int target = Math.Min(totalPages, currentPage + jumpSize);
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("DownloadReport", new { page = target })">…</a>
                            </li>
                        }

                        // Last few pages
                        for (int i = Math.Max(totalPages - 2, 4); i <= totalPages; i++)
                        {
                            if (i == currentPage)
                            {
                                <li class="page-item active"><span class="page-link">@i</span></li>
                            }
                            else
                            {
                                <li class="page-item"><a class="page-link" href="@Url.Action("DownloadReport", new { page = i })">@i</a></li>
                            }
                        }

                        // Next page
                        if (currentPage < totalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("DownloadReport", new { page = currentPage + 1 })">&raquo;</a>
                            </li>
                        }

                        // Last page link
                        if (currentPage < totalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("DownloadReport", new { page = totalPages })">Last</a>
                            </li>
                        }
                    }
                </ul>

                <!-- Jump to page -->
                @*     <form method="get" action="@Url.Action("DownloadReport")" class="d-flex ms-2" style="width:150px;">
                    <input type="number" class="form-control form-control-sm" name="page" min="1" max="@ViewBag.TotalPages" placeholder="Page #" />
                    <button type="submit" class="btn btn-sm btn-primary ms-1">Go</button>
                </form> *@
            </div>
        </nav>

    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Inject server-side message into JS
    var swalMsg = '@(TempData["SwalMessage"] ?? "")';
     var swalIcon = '@(TempData["SwalIcon"] ?? "")';

     if (swalMsg && swalMsg.trim() !== "") {
         Swal.fire({
             icon: swalIcon || 'info',
             title: swalIcon === 'success' ? 'Success' :
                    swalIcon === 'warning' ? 'Notice' : 'Error',
             text: swalMsg,
             confirmButtonText: 'OK'
         });
     }

    // Validate dropdown before allowing submit
    document.getElementById("reportForm").addEventListener("submit", function (e) {
        const reportType = document.getElementById("reportType").value;
        if (!reportType) {
            e.preventDefault();
            Swal.fire({
                icon: 'error',
                title: 'Missing Report Type',
                text: 'Please select a report type before generating.'
            });
            return;
        }
    });
</script>
