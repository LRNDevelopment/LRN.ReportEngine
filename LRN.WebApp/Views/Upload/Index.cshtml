@model List<FileUpload>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="/css/site.css">

<div class="container">
    <div class="upload-box">
        @using (Html.BeginForm("UploadFile", "Upload", FormMethod.Post, new { enctype = "multipart/form-data", @class = "upload-form-inline", id = "uploadForm", onsubmit = "return validateForm();" }))
        {
            @Html.AntiForgeryToken()
           <div class="form-group" style="margin-bottom: 1rem;">
            @Html.DropDownList("lab", (List<SelectListItem>)ViewBag.Labs, "Select Lab", new { @class = "input-field form-control", @id = "lab", @name = "lab" })
            <div id="lab-error" class="text-danger"></div>
        </div>

        <div class="form-group" style="margin-bottom: 1rem;">
            @Html.DropDownList("fileType", (List<SelectListItem>)ViewBag.FileTypes, "Select File Type", new { @class = "input-field form-control", @id = "fileType", @name = "fileType" })
            <div id="fileType-error" class="text-danger"></div>
        </div>

        <div class="form-group" style="margin-bottom: 1rem;">
            <input type="file" id="file" name="file" class="input-field file-input form-control" />
            <div id="file-error" class="text-danger"></div>
        </div>

        <div class="form-group"  style="margin-bottom: 1rem;">
            <button type="submit" class="btn btn-primary">Upload</button>
        </div>

        }


        <p id="validationMessage" class="error-message"></p>
    </div>

    <div class="table-container" style="max-height:500px;overflow:scroll;">
        <table>
            <thead>
                <tr>
                    <th>File Name</th>
                    <th>Lab</th>
                    <th>File Type</th>
                    <th>Uploaded On</th>
                    <th>Excel Row Count</th>
                    <th>Imported Row Count</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderByDescending(c=>c.ImportedOn).ToList())
                {
                    <tr>
                        <td>@item.ImportFileName</td>
                        <td>Prism</td>
                        <td>@item.FileTypeName</td>
                        <td>@item.ImportedOn</td>
                        <td>@item.ExcelRowCount</td>
                        <td>@item.ImportedRowCount</td>
                        <td class="@item.FileStatusName.ToLower()">@item.FileStatusName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
       @if (TempData["UploadSuccess"] != null)
    {
        <text>
        Swal.fire({
            icon: 'success',
            title: 'Upload Complete',
            text: 'File is upload and under In-Progress.',
            confirmButtonText: 'OK'
        });
        </text>
    }
    function validateForm() {
        const lab = document.getElementById("lab").value;
        const fileType = document.getElementById("fileType").value;
        const fileInput = document.getElementById("file");
        const file = fileInput.value;

        // Clear all previous error messages
        document.getElementById("lab-error").innerText = "";
        document.getElementById("fileType-error").innerText = "";
        document.getElementById("file-error").innerText = "";

        let isValid = true;

        if (!lab) {
            showError("lab", "Please select a lab");
            isValid = false;
        }

        if (!fileType) {
            showError("fileType", "Please select a file type");
            isValid = false;
        }

        if (!file) {
            showError("file", "Please upload a file");
            isValid = false;
        } else {
            const allowedExtensions = /(\.xlsx|\.xls|\.csv)$/i;
            if (!allowedExtensions.exec(file)) {
                showError("file", "Invalid file type");
                isValid = false;
            }
        }

        return isValid;
    }

    function showError(inputId, message) {
        const errorDiv = document.getElementById(`${inputId}-error`);
        if (errorDiv) {
            errorDiv.innerText = message;
        }
    }
</script>

