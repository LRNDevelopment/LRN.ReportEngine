@model IEnumerable<LRN.ExcelToSqlETL.Core.DtoModels.ReportDownloadSts>;
@{
    ViewBag.Title = "Report Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    .filter-bar {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .table-container {
        background-color: #fff;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    .center-txt
    {
        align-content:center;
    }
    .pagination {
        justify-content: center;
    }
</style>
<div id="loader"><div class="spinner"></div></div>
<div class="container mt-4">
    @using (Html.BeginForm(actionName: "DownloadReport", controllerName: "Upload", method: FormMethod.Post, htmlAttributes: new { id = "reportForm", action = Url.Action("DownloadReport", "Upload") }))
    {
        @Html.AntiForgeryToken()
        <div class="filter-bar row align-items-end">
            <div class="col-md-6">
                <label for="reportType" class="form-label">Select Report Type</label>
                @Html.DropDownList("reportType", new SelectList(ViewBag.ReportTypes as List<SelectListItem>, "Value", "Text"), "-- Select Report Type--", new { @class = "form-select", id = "reportType" })
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary w-100 mt-3" type="submit">Generate</button>
            </div>
        </div>
    }


    <!-- Table -->
    <div class="table-container">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Report Type</th>
                    <th>Generated Date</th>
                    <th>Status / Action</th>
                </tr>
            </thead>
            <tbody>
             @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ReportName</td>
                        <td>@item.CreatedOn.ToString("dd MMM yyyy HH:mm")</td>
                        <td>
                            <center>
                            @if (item.ReportStatus == 3)  // Assuming 3 = In Progress
                            {
                                <span  class="text-warning fw-bold">@item.FileStatus</span>
                            }
                            else
                            {
                                using (Html.BeginForm("DownloadImportedFile", "Upload", FormMethod.Post, new { @class = "d-inline" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("filePath", item.ReportServerPath)
                                    @Html.Hidden("fileName", item.ReportName)
                                    @Html.Hidden("createdOn", item.CreatedOn.ToString("o")) <!-- ISO format -->

                                    <button class="btn btn-sm btn-success" type="submit" style="width:85px;font-weight:600;">
                                        Download
                                    </button>
                                }
                            }
                            </center>
                        </td>
                    </tr>
                }
                <!-- JS will render rows here -->
            </tbody>
        </table>

        @* <!-- Pagination -->
        <nav>
            <ul class="pagination" id="paginationContainer">
                <!-- JS renders pages -->
            </ul>
        </nav> *@
    </div>
</div>
<script>
    const reports = []; // Add initial records here or load via AJAX
    const pageSize = 10;
    let currentPage = 1;

        document.getElementById("reportForm").addEventListener("submit", function (e) {
        const reportType = document.getElementById("reportType").value;
        if (!reportType)
        { e.preventDefault();
            return alert("Please select a report type");
        }

         document.getElementById("loader").style.display = "flex";

        // Fallback: hide loader after 10 seconds in case download failed silently
        setTimeout(() => {
            document.getElementById("loader").style.display = "none";
        }, 18000);

        // const newReport = {
        //     type: reportType,
        //     date: new Date().toLocaleString(),
        //     id: Date.now()
        // };

        // reports.unshift(newReport); // Add to top
        // renderTable();
    });

    function renderTable() {
        const tbody = document.getElementById("reportTableBody");
        tbody.innerHTML = "";

        const pagedReports = reports.slice((currentPage - 1) * pageSize, currentPage * pageSize);
        pagedReports.forEach(r => {
            tbody.innerHTML += `
                <tr>
                    <td>${r.type}</td>
                    <td>${r.date}</td>

                </tr>
            `;
        });

        renderPagination();
    }

    function renderPagination() {
        const totalPages = Math.ceil(reports.length / pageSize);
        const container = document.getElementById("paginationContainer");
        container.innerHTML = "";

        for (let i = 1; i <= totalPages; i++) {
            container.innerHTML += `
                <li class="page-item ${i === currentPage ? 'active' : ''}">
                    <a class="page-link" href="#" onclick="gotoPage(${i})">${i}</a>
                </li>`;
        }
    }

    function gotoPage(page) {
        currentPage = page;
        renderTable();
    }

    // initial dummy data
    for (let i = 1; i <= 23; i++) {
        reports.push({ type: "Sample Report " + i, date: new Date().toLocaleDateString(), id: i });
    }

    renderTable();
</script>
